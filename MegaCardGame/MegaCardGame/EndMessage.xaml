<Page x:Class="MegaCardGame.EndMessage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MegaCardGame"
      mc:Ignorable="d" 
      Height="120" Width="200" Background="WhiteSmoke"
      Title="EndMessage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Button Content="OK" Grid.Column="1" HorizontalAlignment="Center" Margin="10,16.2,10,0" Grid.Row="3" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <Label Label.Content="FUCK YOU" FontSize="10" Grid.Column="1" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10.4,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="100"/>

    </Grid>
</Page>
